{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "incremental": true,
        "importsNotUsedAsValues": "preserve"
    },
    "exclude": [
        "**/node_modules/*",
        "klipper_dash_visualizer",
        "dist",
    ]
}